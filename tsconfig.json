{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@commands": ["src/commands"],
      "@commands/*": ["src/commands/*"],
      "@database": ["src/database"],
      "@entities/*": ["src/database/entities/*"],
      "@repositories/*": ["src/database/repositories/*"],
      "@tools/*": ["src/tools/*"],
      "@utility": ["src/utility"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
